<% ssh_aliases.keys.sort.each do |alias_and_options| %>
Host <%= alias_and_options %>
    Hostname <%= ssh_aliases[alias_and_options]["hostname"] %>
    User <%= ssh_aliases[alias_and_options]["user"] %>
    IdentityFile <%= ssh_aliases[alias_and_options]["file"] %>
    IdentitiesOnly yes

<% end %>
